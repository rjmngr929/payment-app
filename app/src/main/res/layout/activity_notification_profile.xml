<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.profile.activity.notification.NotificationProfileActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/profile_notification_toolbar"
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollIndicators="none"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="General Notification"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Sound"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Vibrate"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="App updates"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Bill Reminder"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Promotion"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>


            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Discount Available"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Payment Request"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="New Service Available"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="New Tips Available"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/black"
                style="@style/Widget.App.Switch"
                android:layout_marginVertical="@dimen/_4sdp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>