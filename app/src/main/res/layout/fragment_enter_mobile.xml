<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/_12sdp"
    tools:context=".ui.Auth.login.fragments.EnterMobileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/create_acc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login To Your \nAccount"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_30sdp"/>

        <EditText
            android:id="@+id/enterMobile_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/semi_curved_border"
            android:hint="@string/enter_mobile_number"
            android:inputType="phone"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            tools:ignore="TextFields" />
        <TextView
            android:id="@+id/mobile_err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter valid number"
            android:textSize="@dimen/_10sdp"
            android:layout_gravity="start"
            android:visibility="invisible"
            android:textColor="@color/failed"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/send_otp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send OTP"
            android:background="@drawable/rounded_btn_bg"
            app:backgroundTint="@color/button_blue"
            android:layout_marginTop="@dimen/_30sdp"/>


    </LinearLayout>

</FrameLayout>