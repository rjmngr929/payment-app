<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Auth.forgot.fragment.SelectContactVerifyFragment">

    <ScrollView
        android:id="@+id/layout_forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_16sdp"
            >

            <ImageView
                android:id="@+id/select_otp_method_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:background="@drawable/forgot_img"
                android:scaleType="fitXY"
                android:layout_marginHorizontal="@dimen/_20sdp"/>

            <TextView
                android:id="@+id/select_otp_method_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select which contact detail should we use to reset your password"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:layout_marginVertical="@dimen/_6sdp"/>


            <LinearLayout
                android:id="@+id/select_sms_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_12sdp"
                android:clickable="true"
                android:layout_marginVertical="@dimen/_6sdp"
                android:background="@drawable/edittext_border"
                android:focusable="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardCornerRadius="@dimen/_100sdp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/button_blue_20">
                    <View
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/chat"
                        android:backgroundTint="@color/button_blue"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="via SMS:"
                        android:textColor="@color/editText_gray"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91-9784512365"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_mail_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_12sdp"
                android:clickable="true"
                android:layout_marginVertical="@dimen/_6sdp"
                android:background="@drawable/edittext_border_gray"
                android:focusable="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    app:cardCornerRadius="@dimen/_100sdp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/button_blue_20">
                    <View
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/ic_email"
                        android:backgroundTint="@color/button_blue"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="via Email:"
                        android:textColor="@color/editText_gray"
                        android:textSize="@dimen/_10ssp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xyz@mail.com"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continue_forgot_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:background="@drawable/rounded_btn_bg"
                app:backgroundTint="@color/button_blue"
                android:layout_marginVertical="@dimen/_15sdp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>