<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.accountSetup.fragment.ReasonForAppFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_12sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason For Using App"
                android:textSize="@dimen/_18ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="we want to provide the best experience according to your needs."
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/editText_gray"
                android:textAlignment="center"
                android:layout_marginVertical="@dimen/_10sdp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:contentPadding="@dimen/_6sdp"
                        android:layout_margin="@dimen/_4sdp"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_marginVertical="@dimen/_6sdp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Spend or save daily"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:contentPadding="@dimen/_6sdp"
                        android:layout_margin="@dimen/_4sdp"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_marginVertical="@dimen/_6sdp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Spend while travelling"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:contentPadding="@dimen/_6sdp"
                        android:layout_margin="@dimen/_4sdp"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_marginVertical="@dimen/_6sdp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Send and manage money"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:contentPadding="@dimen/_6sdp"
                        android:layout_margin="@dimen/_4sdp"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_marginVertical="@dimen/_6sdp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gain exposure to financial assets"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:contentPadding="@dimen/_6sdp"
                        android:layout_margin="@dimen/_4sdp"
                        style="?attr/materialCardViewElevatedStyle"
                        android:layout_marginVertical="@dimen/_6sdp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="others"
                                android:textSize="@dimen/_14ssp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    </LinearLayout>
            </ScrollView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_12sdp"
                android:layout_marginVertical="@dimen/_20sdp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/skip_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Skip"
                    android:textColor="@color/button_blue"
                    android:background="@drawable/rounded_btn_bg"
                    app:backgroundTint="@color/button_blue_20"
                    android:layout_marginEnd="@dimen/_15sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/continue_btn"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:background="@drawable/rounded_btn_bg"
                    app:backgroundTint="@color/button_blue"
                    android:layout_marginStart="@dimen/_15sdp"
                    app:layout_constraintStart_toEndOf="@+id/skip_btn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


</FrameLayout>